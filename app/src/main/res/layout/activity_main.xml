<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/black"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <com.bakikocak.customstepper.StepperIndicator
        android:id="@+id/stepper_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:stpi_circleStrokeWidth="1dp"
        app:stpi_doneIconDrawable="@drawable/ic_done_black_18dp"
        app:stpi_indicatorColor="#ffffff"
        app:stpi_indicatorRadius="0dp"
        app:stpi_lineDoneColor="#ffffff"
        app:stpi_lineMargin="0dp"
        app:stpi_lineStrokeWidth="0.5dp"
        app:stpi_showDoneIcon="true"
        app:stpi_labels="@array/stepLabels"/>

</RelativeLayout>
